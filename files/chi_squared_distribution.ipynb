    "\n",
    "%matplotlib ipympl\n",
    "\n",
    "d = 2\n",
    "mu = zeros(d)\t\t# mean 0\n",
    "Q = eye(d)\t\t\t# variance I\n",
    "\n",
    "x = arange(-3,3,.01)\n",
    "y = arange(-3,3,.01)\n",
    "\n",
    "xy = cartesian_product(x,y)\n",
    "# last axis of xy is fed into pdf\n",
    "z = Z(mu,Q).pdf(xy)\n",
    "\n",
    "ax = axes(projection = '3d')\n",
    "\n",
    "x,y = meshgrid(x,y)\n",
    "ax.plot_surface(x, y, z, cmap = 'cool')\n",
    "\n",
    "ax.axis('off')\n",
    "show()\n"
   ]
